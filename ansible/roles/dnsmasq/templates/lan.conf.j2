# Orange Pi NAT - DHCP + DNS forwarder ({{ lan_iface }})
interface={{ lan_iface }}
bind-dynamic
dhcp-range={{ dhcp_range_start }},{{ dhcp_range_end }},24h
dhcp-option=option:router,{{ lan_ip }}
dhcp-option=option:dns-server,{{ lan_ip }}
dhcp-host={{ keenetic_mac }},{{ keenetic_ip }},keenetic

# DoH upstream via dnsproxy on localhost
no-resolv
server=127.0.0.1#5353
